{
  "name": "real-estate-listings",
  "version": "0.0.1",
  "description": "",
  "author": "shirokuronemuri",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:prod": "pnpm db:m:prod && node dist/main",
    "build": "pnpm db:g && nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:e2e": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" NODE_ENV=test jest --runInBand --config ./test/jest-e2e.json",
    "test:e2e:ci": "pnpm d:up:test && pnpm db:m:test && pnpm test:e2e && pnpm d:down:test",
    "d:up:dev": "docker compose --env-file .env.development up -d",
    "d:down:dev": "docker compose --env-file .env.development down",
    "d:up:test": "docker compose --env-file .env.test -f docker-compose.test.yml up -d",
    "d:down:test": "docker compose --env-file .env.test -f docker-compose.test.yml down",
    "d:build:prod": "cross-env-shell docker build -t ${DOCKERHUB_USERNAME:?ERROR_MISSING_DOCKERHUB_USERNAME}/${APP_NAME:?ERROR_MISSING_APP_NAME}:latest .",
    "d:push:prod": "cross-env-shell docker push -t ${DOCKERHUB_USERNAME:?ERROR_MISSING_DOCKERHUB_USERNAME}/${APP_NAME:?ERROR_MISSING_APP_NAME}:latest",
    "d:up:prod": "docker compose --env-file .env.production -f docker-compose.prod.yml up -d --pull always",
    "d:down:prod": "docker compose --env-file .env.production -f docker-compose.prod.yml down",
    "db:m:dev": "dotenv -e .env.development pnpm prisma migrate dev && dotenv -e .env.development pnpm db:g",
    "db:m:test": "dotenv -e .env.test -- pnpm prisma migrate reset --force",
    "db:m:prod": "pnpm prisma migrate deploy",
    "db:g": "pnpm prisma generate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.972.0",
    "@aws-sdk/lib-storage": "^3.972.0",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.2",
    "nanoid": "^3.3.11",
    "nestjs-zod": "^5.1.1",
    "prisma": "^7.3.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.19.7",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.12.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.8.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
